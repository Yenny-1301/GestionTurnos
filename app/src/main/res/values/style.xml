<resources>
    <style name="PlaceholderBlack" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/gray_input</item>
    </style>
    <style name="BotonInicio">
        <item name="android:layout_width">192dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="ErrorTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#B00020</item>
        <item name="android:background">#FCE4EC</item>
    </style>
    <style name="BotonCerrarModal">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:backgroundTint">@color/fondoBtnClose</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="cornerRadius">60dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:text">X</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="botonGris">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/greySecondary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
    <style name="botonRojo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
</resources>