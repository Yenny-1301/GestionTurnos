<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/colorSurface">

        <!-- TITULO -->
        <LinearLayout
            android:id="@+id/containerTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">
            <TextView
                android:id="@+id/tituloBienvenida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Bienvenido"
                android:textColor="?attr/colorOnSurface"
                android:textSize="40sp"/>
        </LinearLayout>

        <!-- INPUT CORREO -->
        <LinearLayout
            android:id="@+id/campoCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:layout_marginHorizontal="41dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/colorSurface"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp">

            <LinearLayout
                android:id="@+id/inputCorreo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="?attr/inputBackground"
                    app:boxBackgroundMode="filled"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/ErrorTextStyle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textoInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/inputBackground"
                        android:hint="Correo electrónico"
                        android:inputType="textEmailAddress"
                        android:minHeight="48dp"
                        android:padding="8dp"
                        android:textColor="?attr/colorOnSurface"
                        android:textColorHint="?attr/colorOnSurfaceVariant"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iconoCorreo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:contentDescription="Icono de correo electrónico"
                android:src="@drawable/icon_correo"
                android:scaleType="fitCenter"
                app:tint="?attr/iconTint"/>
        </LinearLayout>

        <!-- INPUT CONTRASEÑA -->
        <LinearLayout
            android:id="@+id/campoPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:layout_marginHorizontal="41dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/colorSurface"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp">

            <LinearLayout
                android:id="@+id/inputPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="?attr/inputBackground"
                    app:boxBackgroundMode="filled"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/ErrorTextStyle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textoPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/inputBackground"
                        android:hint="Contraseña"
                        android:minHeight="48dp"
                        android:inputType="textPassword"
                        android:fontFamily="sans-serif"
                        android:padding="8dp"
                        android:textColor="?attr/colorOnSurface"
                        android:textColorHint="?attr/colorOnSurfaceVariant"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iconoPass"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:contentDescription="Mostrar contraseña"
                android:src="@drawable/icon_passclose"
                android:scaleType="fitCenter"
                app:tint="?attr/iconTint"/>
        </LinearLayout>

        <!-- OLVIDASTE CONTRASEÑA -->
        <TextView
            android:id="@+id/olvidastePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="¿Olvidaste tu contraseña?"
            android:textColor="@color/azul"
            android:gravity="center"
            android:layout_marginBottom="26dp"
            android:clickable="true"
            android:focusable="true"/>

        <!-- BOTÓN INICIAR SESIÓN -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/inicioSesion"
            style="@style/BotonInicio"
            android:text="Iniciar sesión"
            android:layout_marginBottom="20dp"/>

        <!-- REGÍSTRATE -->
        <TextView
            android:id="@+id/registrateAqui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="¿No tienes cuenta? Regístrate"
            android:textColor="@color/azul"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="15dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
