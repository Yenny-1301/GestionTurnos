<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_secondary"
    tools:context=".ServiciosFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ServiciosFragment">

        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicios"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Secci贸n de contenido -->
        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_top_container"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="210dp">

            <TextView
                android:id="@+id/tvTituloEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar servicio"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNombreServicio"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Nombre del servicio"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/black"
                app:placeholderText="Ej: Corte de cabello"
                app:placeholderTextAppearance="@style/PlaceholderBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNombreServicio2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|start"
                    android:inputType="textPersonName"
                    android:paddingStart="12dp"
                    android:paddingTop="32dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etDuracion"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Duraci贸n (minutos)"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/black"
                app:placeholderText="30"
                app:placeholderTextAppearance="@style/PlaceholderBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDuracion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|start"
                    android:inputType="textPersonName"
                    android:paddingStart="12dp"
                    android:paddingTop="32dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etPrecio"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Precio"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/black"
                app:placeholderText="0.00"
                app:placeholderTextAppearance="@style/PlaceholderBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPrecio2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|start"
                    android:inputType="textPersonName"
                    android:paddingStart="12dp"
                    android:paddingTop="32dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <!-- Bot贸n Cancelar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelar"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="0dp"
                    android:minHeight="56dp"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/gray_input_texto"
                    app:cornerRadius="12dp" />

                <!-- Espacio entre botones -->
                <Space
                    android:layout_width="16dp"
                    android:layout_height="match_parent" />

                <!-- Bot贸n Guardar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGuardar"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="0dp"
                    android:minHeight="56dp"
                    android:text="Guardar"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/azul"
                    app:cornerRadius="12dp" />
            </LinearLayout>


            <!--<androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvServicios"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingBottom="8dp" /> -->


        </LinearLayout>

        <!--<com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddServicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Agregar servicio"
            android:src="@drawable/add_sign"
            app:tint="@android:color/white"
            app:backgroundTint="@color/azul"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="24dp" /> -->

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>