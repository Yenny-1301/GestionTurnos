<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/gray_input_texto"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.None"
    app:cardBackgroundColor="@color/lila">

        <!-- Secci贸n de contenido -->
        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_top_container"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="170dp">

            <TextView
                android:id="@+id/tvTituloEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar servicio"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!--Campo Nombre de Servicio-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNombreServicio"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Nombre del servicio"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/black"
                app:placeholderText="Ej: Corte de cabello"
                app:placeholderTextAppearance="@style/PlaceholderBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNombreServicio2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|start"
                    android:inputType="textPersonName"
                    android:paddingStart="12dp"
                    android:paddingTop="32dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--Campo Duracion-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etDuracion"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Duraci贸n (minutos)"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/black"
                app:placeholderText="30"
                app:placeholderTextAppearance="@style/PlaceholderBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDuracion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|start"
                    android:inputType="textPersonName"
                    android:paddingStart="12dp"
                    android:paddingTop="32dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--Campo Precio-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etPrecio"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Precio"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/black"
                app:placeholderText="0.00"
                app:placeholderTextAppearance="@style/PlaceholderBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPrecio2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|start"
                    android:inputType="textPersonName"
                    android:paddingStart="12dp"
                    android:paddingTop="32dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botones inferiores -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Bot贸n Cancelar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelar"
                    style="@style/Widget.Material3.Button.IconButton.Filled"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    android:textColor="?attr/colorOnTertiary"
                    app:backgroundTint="@color/gray_input_texto"
                    app:cornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <!-- Bot贸n Guardar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGuardar"
                    style="@style/Widget.Material3.Button.IconButton.Filled"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Guardar"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/azul"
                    app:cornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

</com.google.android.material.card.MaterialCardView>