<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity">
    <!--  Layout CONTENIDO -->
    <LinearLayout
        android:id="@+id/layoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white">
        <!--  Layout TITULO -->
        <LinearLayout
            android:id="@+id/containerTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
            android:layout_marginBottom="30dp"
            tools:layout_editor_absoluteY="339dp">
            <TextView
                android:id="@+id/tituloBienvenida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Regístrate"
                android:textColor="#000000"
                android:textSize="40sp"/>
        </LinearLayout>
        <!--  Layout INPUT CORREO -->
        <LinearLayout
            android:id="@+id/campoCorreo"
            android:layout_marginBottom="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/gray_input"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp"
            android:layout_marginHorizontal="41dp"
            android:orientation="horizontal">
            <!--  Layout INPUT CORREO CONTENIDO-->
            <LinearLayout
                android:id="@+id/inputCorreo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tituloCorreo"
                    android:textColor="@color/gray_input_texto"
                    android:textSize="12sp"
                    android:layout_marginBottom="1dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="correo electrónico"/>
                <EditText
                    android:id="@+id/textoInput"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/negro_texto"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--  Layout INPUT CONTRASEÑA -->
        <LinearLayout
            android:id="@+id/campoPass"
            android:layout_marginBottom="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/gray_input"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp"
            android:layout_marginHorizontal="41dp"
            android:orientation="horizontal">
            <!--  Layout INPUT CONTRASEÑA CONTENIDO-->
            <LinearLayout
                android:id="@+id/inputPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tituloPass"
                    android:textColor="@color/gray_input_texto"
                    android:textSize="12sp"
                    android:layout_marginBottom="1dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="contraseña"/>
                <EditText
                    android:id="@+id/textoPass"
                    android:textColor="@color/negro_texto"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/iconoPass"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Mostrar contraseña"
                android:src="@drawable/icon_passclose"
                android:scaleType="fitCenter"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/campoPassVerif"
            android:layout_marginBottom="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/gray_input"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp"
            android:layout_marginHorizontal="41dp"
            android:orientation="horizontal">
            <!--  Layout INPUT CONTRASEÑA CONTENIDO-->
            <LinearLayout
                android:id="@+id/inputPassVerif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tituloPassVerif"
                    android:textColor="@color/gray_input_texto"
                    android:textSize="12sp"
                    android:layout_marginBottom="1dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="confirmar contraseña"/>
                <EditText
                    android:id="@+id/textoPassVerif"
                    android:textColor="@color/negro_texto"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/iconoPassVerif"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Mostrar contraseña"
                android:src="@drawable/icon_passclose"
                android:scaleType="fitCenter"/>
        </LinearLayout>
        <!--  COPY terminos y condiciones .... -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/checkbox_terminos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/azul"
                android:textStyle="bold"
                android:buttonTint="@color/primaryViolet"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:text="He leído y acepto los Términos y condiciones"/>
            <TextView
                android:id="@+id/checkboxError"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:text=" "
                android:layout_gravity="center"
                android:layout_marginBottom="26dp"
                />
        </LinearLayout>

        <!--  BOTON INICIAR SESION .... -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/inicioSesion"
            style="@style/BotonInicio"
            android:text="Registrate"
            android:layout_marginBottom="26dp"/>
        <!--  COPY REGISTRATE .... -->
        <TextView
            android:id="@+id/ingresaAqui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="¿Ya tienes una cuenta? Ingresa aquí"
            android:textColor="@color/azul"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>