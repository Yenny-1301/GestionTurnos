<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity">
    <!--  Layout CONTENIDO -->
    <LinearLayout
        android:id="@+id/layoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/colorSurface">
        <!--  Layout TITULO -->
        <LinearLayout
            android:id="@+id/containerTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
            android:layout_marginBottom="30dp"
            tools:layout_editor_absoluteY="339dp">
            <TextView
                android:id="@+id/tituloBienvenida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Regístrate"
                android:textColor="?attr/colorOnSurface"
                android:textSize="40sp"/>
        </LinearLayout>
        <!--  Layout INPUT NOMBRE -->
        <LinearLayout
            android:id="@+id/campoNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:layout_marginHorizontal="41dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/colorSurface"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp">

            <LinearLayout
                android:id="@+id/inputNombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nameInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="?attr/inputBackground"
                    app:boxBackgroundMode="filled"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/ErrorTextStyle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textoNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorOnSurface"
                        android:hint="Nombre"
                        android:inputType="textPersonName"
                        android:minHeight="48dp"
                        android:padding="8dp"
                        android:textColor="?attr/colorOnSurface"
                        android:textColorHint="?attr/colorOnSurfaceVariant"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iconoNombre"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:contentDescription="Icono de nombre"
                android:src="@drawable/outline_person_24"
                android:scaleType="fitCenter"
                app:tint="?attr/iconTint" />
        </LinearLayout>

        <!--  Layout INPUT CORREO -->
        <LinearLayout
            android:id="@+id/campoCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:layout_marginHorizontal="41dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/colorSurface"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp">

            <LinearLayout
                android:id="@+id/inputCorreo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="?attr/inputBackground"
                    app:boxBackgroundMode="filled"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/ErrorTextStyle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textoInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorOnSurface"
                        android:hint="Correo electrónico"
                        android:inputType="textEmailAddress"
                        android:minHeight="48dp"
                        android:padding="8dp"
                        android:textColor="?attr/colorOnSurface"
                        android:textColorHint="?attr/colorOnSurfaceVariant"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iconoCorreo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Icono de correo electrónico"
                android:src="@drawable/icon_correo"
                android:scaleType="fitCenter"
                app:tint="?attr/iconTint"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>

        <!--  Layout INPUT CONTRASEÑA -->
        <LinearLayout
            android:id="@+id/campoPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:layout_marginHorizontal="41dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/colorSurface"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp">

            <LinearLayout
                android:id="@+id/inputPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="?attr/inputBackground"
                    app:boxBackgroundMode="filled"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/ErrorTextStyle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textoPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorOnSurface"
                        android:hint="Contraseña"
                        android:minHeight="48dp"
                        android:padding="8dp"
                        android:inputType="textPassword"
                        android:fontFamily="sans-serif"
                        android:textColor="?attr/colorOnSurface"
                        android:textColorHint="?attr/colorOnSurfaceVariant"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iconoPass"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:contentDescription="Mostrar contraseña"
                android:src="@drawable/icon_passclose"
                android:scaleType="fitCenter"
                app:tint="?attr/iconTint"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/campoPassVerif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:layout_marginHorizontal="41dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/colorSurface"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp">

            <LinearLayout
                android:id="@+id/inputPassVerif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordInputLayoutPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="?attr/inputBackground"
                    app:boxBackgroundMode="filled"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/ErrorTextStyle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textoPassVerif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorOnSurface"
                        android:hint="Confirmar contraseña"
                        android:minHeight="48dp"
                        android:padding="8dp"
                        android:inputType="textPassword"
                        android:fontFamily="sans-serif"
                        android:textColor="?attr/colorOnSurface"
                        android:textColorHint="?attr/colorOnSurfaceVariant"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iconoPassVerif"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:contentDescription="Mostrar contraseña"
                android:src="@drawable/icon_passclose"
                android:scaleType="fitCenter"
                app:tint="?attr/iconTint"/>
        </LinearLayout>

        <!--  BOTON INICIAR SESION .... -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/inicioSesion"
            style="@style/BotonInicio"
            android:text="Registrate"
            android:layout_marginBottom="20dp"/>
        <!--  COPY REGISTRATE .... -->
        <TextView
            android:id="@+id/ingresaAqui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="¿Ya tienes una cuenta? Ingresa aquí"
            android:padding="15dp"
            android:textColor="@color/azul"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>